<p style="color: green"><%= notice %></p>

<h1>Todos</h1>

<form action="/todos" method="get">
  <input type="text" name="q" >
  <input type="submit" value="Search">
</form>

<div id="todos">
  <% @todos.each do |todo| %>
    <%= render todo %>
    <p>
      <%= link_to "Show this todo", todo %>
    </p>
  <% end %>
</div>

<%= link_to "New todo", new_todo_path %>
